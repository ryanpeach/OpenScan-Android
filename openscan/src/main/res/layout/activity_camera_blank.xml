<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.github.openscan.CameraBlank" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->



    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <!--
        	The primary buttons and preview layout.
        -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!--
        		The main image display.
        		Source: http://docs.opencv.org/2.4/doc/tutorials/introduction/android_binary_package/dev_with_OCV_on_Android.html#using-opencv-library-within-your-android-project
       			-->
                <org.opencv.android.JavaCameraView
                    android:id="@+id/capture_main"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    opencv:camera_id="any"
                    opencv:show_fps="true" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="bottom" >

                <ImageView
                    android:id="@+id/capture_preview"
                    android:layout_width="85dp"
                    android:layout_height="110dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/margin_size"
                    android:layout_marginLeft="@dimen/margin_size" />

                <ImageButton
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_size"
                    android:layout_marginBottom="@dimen/margin_size"
                    android:src="@drawable/ic_check_circle_white" />



                <!--This is the toolbar!-->
                <LinearLayout
                    android:id="@+id/capture_toolbar"
                    android:background="@color/black_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top"
                    android:columnCount="2"
                    android:rowCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Select Method"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/method_sel" />

                    <ImageView
                        android:id="@+id/capture_data"
                        android:layout_width="85dp"
                        android:layout_height="110dp"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/margin_size"
                        android:padding="50dp"
                        android:layout_rowSpan="2" />
                </GridLayout>

                <GridLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fpsborder_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    tools:context=".GridXMLActivity">

                    <TextView
                        android:padding="10dp"
                        android:text="Angle Tol."
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                    <SeekBar
                        android:padding="10dp"
                        android:layout_gravity="fill_horizontal"
                        android:max="90"
                        android:progress="20"
                        android:id="@+id/angletol" />

                    <TextView
                        android:padding="10dp"
                        android:text="Distance Tol."
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                    <SeekBar
                        android:padding="10dp"
                        android:layout_gravity="fill_horizontal"
                        android:max="100"
                        android:progress="20"
                        android:id="@+id/distratio" />

                    <TextView
                        android:padding="10dp"
                        android:text="Poly Tol."
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                    <SeekBar
                        android:padding="10dp"
                        android:layout_gravity="fill_horizontal"
                        android:max="30"
                        android:progress="5"
                        android:id="@+id/polytol" />

                    <TextView
                        android:padding="10dp"
                        android:text="Size Ratio"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                    <SeekBar
                        android:padding="10dp"
                        android:layout_gravity="fill_horizontal"
                        android:max="1000"
                        android:progress="250"
                        android:id="@+id/sizeratio" />

                    <TextView
                        android:padding="10dp"
                        android:text="Ratio Tol."
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                    <SeekBar
                        android:padding="10dp"
                        android:layout_gravity="fill_horizontal"
                        android:max="1000"
                        android:progress="100"
                        android:id="@+id/ratiotol" />

                </GridLayout>

            </LinearLayout>


            </RelativeLayout>





        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
